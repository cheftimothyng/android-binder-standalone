FIND_PATH(SBinder_INCLUDE_DIR binder.h ${PROJECT_SOURCE_DIR}/libs/include/)

IF (SBinder_INCLUDE_DIR)
    SET(SBinder_FOUND TRUE)
ENDIF (SBinder_INCLUDE_DIR)

IF (SBinder_FOUND)
    IF (NOT SBinder_FIND_QUIETLY)
        MESSAGE(STATUS "Found SBinder: ${SBinder_INCLUDE_DIR}") 
    ENDIF (NOT SBinder_FIND_QUIETLY)
ELSE (SBinder_FOUND)
    IF (SBinder_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find SBinder")
    ENDIF (SBinder_FIND_REQUIRED)
ENDIF (SBinder_FOUND)
